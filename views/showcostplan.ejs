<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<!-- <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalabel=0"> -->
	<title>郎婷，晚安</title>
</head>
<body>
	<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
	<script type="text/javascript" src="/javascripts/jquery-1.8.2.min.js"></script>
	<script type="text/javascript" src="/javascripts/echarts-plain.js"></script>
	<div class="con">
		<div class="block_top">
			<span>SELECT</span>
		</div>
		<div class="block_con">
			<a href="http://localhost:3400/get/getAgencyCostPlan/2" class="abtn">PLAN COST</a>
			<a href="http://localhost:3400/get/getAgencyCostPlan/1" class="abtn">Actual Cost</a>
			<div class="clear"></div>
		</div>
	</div>
	<div class="con">
		<div class="block_top">
			<span>DETAIL</span>
		</div>
		<div id="showdata"></div>
	</div>
	<script type="text/javascript">
	$(document).ready(function() {
		var myChart = echarts.init(document.getElementById('showdata')); 
        
        option = {
		    title : {
		        text: 'Agency <%=charttitle%>',
		        x:'left'
		    },
		    tooltip : {
		        trigger: 'item',
		        formatter: "{a} <br/>{b} : {c} ({d}%)"
		    },
		    legend: {
		        orient : 'vertical',
		        x : 'right',
		        data:[<%- agency_name%>],
		    },
		    calculable : true,
		    series : [
		        {
		            name:'Agency',
		            type:'pie',
		            radius : '55%',
		            center: ['50%', '50%'],
		            data:[
		                <%- data_show%>
		            ]
		        }
		    ]
		};
        myChart.setOption(option);
        myChart.on(echarts.config.EVENT.CLICK,function(param){
        	var name = param.name;
        	name = name.replace(/\s+/g,"_");
        	window.open('/get/oneAgency/'+name+'/investment/all');
        });
	});
	</script>
</body>
</html>